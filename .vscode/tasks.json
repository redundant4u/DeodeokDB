{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C: Build",
      "command": "/usr/bin/gcc",
      "args": ["-g", "-Wall", "-Wextra", "-Iinclude", "src/*.c", "-o", "main"],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
